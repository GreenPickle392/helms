{
  "id": null,
  "title": "Drupal Monitoring",
  "panels": [
    {
      "type": "graph",
      "title": "Drupal HTTP Requests",
      "targets": [
        {
          "expr": "sum(rate(drupal_http_requests_total[5m])) by (status)",
          "legendFormat": "{{status}}",
          "refId": "A"
        }
      ],
      "xaxis": { "mode": "time" },
      "yaxes": [
        { "format": "ops", "label": "Requests", "logBase": 1 },
        { "format": "short" }
      ]
    },
    {
      "type": "graph",
      "title": "MariaDB Queries",
      "targets": [
        {
          "expr": "mysql_global_status_questions",
          "refId": "B"
        }
      ],
      "xaxis": { "mode": "time" },
      "yaxes": [
        { "format": "ops", "label": "Queries", "logBase": 1 },
        { "format": "short" }
      ]
    }
  ],
  "schemaVersion": 16,
  "version": 1
}
